FROM influxdb:1.8

ARG A_INFLUXDB_HTTP_AUTH_ENABLED
ARG A_INFLUXDB_DB
ARG A_INFLUXDB_USER
ARG A_INFLUXDB_USER_PASSWORD
ARG A_INFLUXDB_ADMIN_USER
ARG A_INFLUXDB_ADMIN_PASSWORD

ENV INFLUXDB_HTTP_AUTH_ENABLED=$A_INFLUXDB_HTTP_AUTH_ENABLED
ENV INFLUXDB_DB=$A_INFLUXDB_DB
ENV INFLUXDB_USER=$A_INFLUXDB_USER
ENV INFLUXDB_USER_PASSWORD=$A_INFLUXDB_USER_PASSWORD
ENV INFLUXDB_ADMIN_USER=$A_INFLUXDB_ADMIN_USER
ENV INFLUXDB_ADMIN_PASSWORD=A_INFLUXDB_ADMIN_PASSWORD